{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  // Azure AD Configuration (OPTIONAL - currently DISABLED for FREE local auth)
  // Leave ClientId empty to use FREE local JWT authentication
  // Only configure ClientId if you want Azure AD integration (requires Azure setup)
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "common",
    "ClientId": "",  // ‚Üê EMPTY = FREE local authentication (no Azure AD required)
    "CallbackPath": "/signin-oidc"
  },
  
  // Local JWT Authentication (FREE - no external services required)
  "Authentication": {
    "Jwt": {
      "Issuer": "https://localhost:5001",
      "Audience": "mcp-server",
      "Key": "ThisIsAVeryLongSecretKeyForJwtTokenGenerationAndMustBeAtLeast32CharactersLong"
    }
  }
}
