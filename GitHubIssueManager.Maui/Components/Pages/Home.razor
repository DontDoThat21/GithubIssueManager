@page "/"
@using GitHubIssueManager.Maui.Services
@inject AuthenticationService AuthService
@inject RepositoryService RepositoryService

<PageTitle>GitHub Issue Manager</PageTitle>

<h1 class="display-4">GitHub Issue Manager</h1>
<p class="subtitle">Manage GitHub issues across multiple repositories with ease.</p>

@if (!AuthService.IsAuthenticated)
{
    <div class="row">
        <div class="col-12 col-md-8">
            <div class="alert alert-info mb-4">
                <h5>Welcome to GitHub Issue Manager!</h5>
                <p>This application helps you manage GitHub issues across multiple repositories. To get started:</p>
                <ol class="mt-2">
                    <li>Configure your GitHub Personal Access Token in <a href="/settings" class="alert-link">Settings</a></li>
                    <li>Browse and add repositories to your watchlist</li>
                    <li>View and manage issues across all your watched repositories</li>
                </ol>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Features</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <h6 class="d-flex align-items-center mb-2">
                                <span class="me-2">🔧</span>
                                Repository Management
                            </h6>
                            <ul>
                                <li>Browse and search GitHub repositories</li>
                                <li>Add repositories to your watchlist</li>
                                <li>View repository metadata and statistics</li>
                            </ul>
                        </div>
                        <div class="col-12 col-md-6">
                            <h6 class="d-flex align-items-center mb-2">
                                <span class="me-2">🐛</span>
                                Issue Management
                            </h6>
                            <ul>
                                <li>View all issues across watched repositories</li>
                                <li>Create new issues</li>
                                <li>Update existing issues</li>
                                <li>Filter and search issues</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Start</h5>
                </div>
                <div class="card-footer">
                    <div class="stack">
                        <a href="/settings" class="btn btn-primary w-100">
                            <span class="me-2">⚙️</span>
                            Configure GitHub Token
                        </a>
                        <a href="/repositories" class="btn btn-outline-primary w-100">
                            <span class="me-2">📂</span>
                            Browse Repositories
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-12 col-md-8">
            <div class="card border-primary">
                <div class="card-header">
                    <h5 class="mb-0">Watched Repositories</h5>
                </div>
                <div class="card-body">
                    @{
                        var watchedRepos = RepositoryService.GetWatchedRepositories().ToList();
                    }
                    @if (watchedRepos.Any())
                    {
                        <div class="row">
                            @foreach (var repo in watchedRepos.Take(6))
                            {
                                <div class="col-12 col-md-6 mb-3">
                                    <div class="card card-outlined">
                                        <div class="card-body">
                                            <h6 class="mb-2">
                                                <a href="@repo.HtmlUrl" target="_blank" class="text-primary text-decoration-none">
                                                    @repo.FullName
                                                </a>
                                            </h6>
                                            <p class="text-secondary mb-2">
                                                @repo.Description
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-info">
                                                    <span class="me-1">⚠️</span>
                                                    @repo.OpenIssuesCount issues
                                                </small>
                                                <a href="/issues/@repo.Owner.Login/@repo.Name" class="btn btn-outline-primary btn-sm">
                                                    View Issues
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <div class="d-flex justify-content-center mt-4">
                            <a href="/repositories" class="btn btn-outline-primary">
                                View All Repositories
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="mb-3" style="font-size: 3rem;">📁</div>
                            <p class="text-secondary mb-4">
                                No repositories in your watchlist yet.
                            </p>
                            <a href="/repositories" class="btn btn-primary">
                                <span class="me-2">➕</span>
                                Add Repositories
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card mb-4 border-secondary">
                <div class="card-header">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-footer">
                    <div class="stack">
                        <a href="/repositories" class="btn btn-outline-primary w-100">
                            <span class="me-2">📂</span>
                            Browse Repositories
                        </a>
                        <a href="/management" class="btn btn-outline-info w-100">
                            <span class="me-2">👤</span>
                            Management
                        </a>
                        <a href="/settings" class="btn btn-outline-secondary w-100">
                            <span class="me-2">⚙️</span>
                            Settings
                        </a>
                    </div>
                </div>
            </div>

            <div class="card border-secondary">
                <div class="card-header">
                    <h5 class="mb-0">Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 text-center">
                            <h2 class="text-primary">
                                @RepositoryService.GetWatchedRepositories().Count()
                            </h2>
                            <small class="text-secondary">
                                Watched Repos
                            </small>
                        </div>
                        <div class="col-6 text-center">
                            <h2 class="text-warning">
                                @RepositoryService.GetWatchedRepositories().Sum(r => r.OpenIssuesCount)
                            </h2>
                            <small class="text-secondary">
                                Open Issues
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
