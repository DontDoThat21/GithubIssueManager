@page "/settings"
@using GitHubIssueManager.Maui.Services
@inject AuthenticationService AuthService
@rendermode InteractiveServer

<PageTitle>Settings</PageTitle>

<h3 class="mb-4">Settings</h3>

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-8">
            <div class="card border-primary">
                <div class="card-header">
                    <h6 class="card-title mb-0">GitHub Authentication</h6>
                </div>
                <div class="card-body">
                    @if (AuthService.IsAuthenticated)
                    {
                        <div class="alert alert-success mb-4" role="alert">
                            <div class="d-flex align-items-center">
                                <span class="me-2">âœ“</span>
                                GitHub token is configured and active.
                            </div>
                        </div>
                        <button type="button"
                                class="btn btn-outline-danger"
                                @onclick="ClearToken">
                            <span class="me-2">âœ—</span>
                            Clear Token
                        </button>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-4" role="alert">
                            <div class="d-flex align-items-center">
                                <span class="me-2">âš </span>
                                No GitHub token configured.
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="tokenInput" class="form-label">GitHub Personal Access Token</label>
                            <input type="password"
                                   class="form-control"
                                   id="tokenInput"
                                   @bind="tokenInput"
                                   placeholder="Enter your GitHub Personal Access Token" />
                            <div class="form-text">
                                Your token will be stored locally and used to authenticate with the GitHub API.
                            </div>
                        </div>

                        <button type="button"
                                class="btn btn-primary"
                                @onclick="SaveToken"
                                disabled="@string.IsNullOrWhiteSpace(tokenInput)">
                            <span class="me-2">ðŸ’¾</span>
                            Save Token
                        </button>
                    }

                    <hr class="my-4" />

                    <h6 class="mb-3">How to create a GitHub Personal Access Token:</h6>
                    <div class="text-muted">
                        <ol>
                            <li class="mb-2">
                                Go to <a href="https://github.com/settings/tokens" target="_blank" class="text-primary text-decoration-none">
                                    GitHub Settings â†’ Developer settings â†’ Personal access tokens
                                </a>
                            </li>
                            <li class="mb-2">Click "Generate new token" â†’ "Generate new token (classic)"</li>
                            <li class="mb-2">Give it a descriptive name like "GitHub Issue Manager"</li>
                            <li class="mb-2">
                                Select the following scopes:
                                <ul class="mt-2">
                                    <li><code class="text-secondary">repo</code> - Full control of private repositories</li>
                                    <li><code class="text-secondary">public_repo</code> - Access public repositories</li>
                                    <li><code class="text-secondary">user</code> - Read user profile data</li>
                                </ul>
                            </li>
                            <li class="mb-2">Click "Generate token" and copy the token value</li>
                            <li>Paste the token in the field above and click "Save Token"</li>
                        </ol>
                    </div>

                    <div class="alert alert-info mt-4" role="alert">
                        <strong>Security Note:</strong> Your token is stored locally on your device and is only used to communicate with the GitHub API. Never share your personal access token with others.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string tokenInput = string.Empty;

    private void SaveToken()
    {
        if (!string.IsNullOrWhiteSpace(tokenInput))
        {
            AuthService.SetToken(tokenInput);
            tokenInput = string.Empty;
            StateHasChanged();
        }
    }

    private void ClearToken()
    {
        AuthService.ClearToken();
        StateHasChanged();
    }
}